<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_profile">

    <LinearLayout
        android:id="@+id/linearLayout_person_tracked_profile_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image_person_tracked_profile_information"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/textView_username_person_tracked_profile_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Layne Granados"
                    android:textSize="@dimen/button_textSize"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_cake_black" />

                    <TextView
                        android:id="@+id/textView_age_person_tracked_profile_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryText"
                        android:text="79 years"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/button_popup"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_action_calendar_day_black"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/textView_birthday_person_tracked_profile_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:text="June 20 1967"
                        android:textSize="@dimen/button_popup"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_action_ruler_black" />

                    <TextView
                        android:id="@+id/textView_heigth_person_tracked_profile_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryText"
                        android:text="1.75mt"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/button_popup"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_fitness_center_black"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/textView_weigth_person_tracked_profile_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorSecondaryText"
                        android:text="69 kgs"
                        android:textSize="@dimen/button_popup"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_label_link_hask_code_person_tracked_profile_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryText"
                        android:text="Hash code to link"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/button_popup"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_link_hask_code_person_tracked_profile_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryText"
                        android:text="302312"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/button_popup"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_service_detail_service_divider"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/colorDividerSecond"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />
</merge>