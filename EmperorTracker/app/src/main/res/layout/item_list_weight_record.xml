<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_weight_record_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/carview_item_list_weight_record"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left|top">

                <TextView
                    android:id="@+id/textView_day_weight_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="@dimen/textview_margin_top"
                    android:text="01"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/numbers_cardview_sleep_records" />

                <TextView
                    android:id="@+id/textView_month_weight_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="JUN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/numbers_cardview_sleep_records"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/view_divider_date_titem_weight_record"
                android:layout_width="3dp"
                android:layout_height="@dimen/divider_item_date_weight"
                android:background="@color/colorDividerSecond"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/textView_value_weight_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="68"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_top_texts_item_weight"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/numbers_cardview_sleep_records"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Kg"
                android:layout_marginTop="@dimen/margin_top_texts_item_weight"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/description_cardview_sleep_records" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_top_texts_item_weight">

            <ImageView
                android:id="@+id/imageview_collapse_expand_item_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_collapsible_weight_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/margin_top_layout_photos_item_weight"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <View
                android:id="@+id/view_divider_item_weight_record"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/colorDividerSecond"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="@dimen/size_images_item_weight"
                    android:layout_height="@dimen/size_images_item_weight"
                    android:layout_gravity="left"
                    android:src="@drawable/weight1"
                    android:layout_marginLeft="@dimen/margin_left_images_item_weight"/>

                <ImageView
                    android:layout_width="@dimen/size_images_item_weight"
                    android:layout_height="@dimen/size_images_item_weight"
                    android:layout_gravity="center"
                    android:src="@drawable/weight2"
                    android:layout_marginLeft="@dimen/margin_left_images_item_weight"/>

                <ImageView
                    android:layout_width="@dimen/size_images_item_weight"
                    android:layout_height="@dimen/size_images_item_weight"
                    android:layout_gravity="right"
                    android:src="@drawable/weight3"
                    android:layout_marginLeft="@dimen/margin_left_images_item_weight"/>

            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>