<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:text="Add a person to track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_title_popup"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="@dimen/button_textSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="30dp"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/hash_code_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_hash_code" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button_cancel_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_popup"
            android:textStyle="bold"
            android:paddingTop="@dimen/button_padding_top_bottom"
            android:paddingBottom="@dimen/button_padding_top_bottom"
            android:paddingLeft="@dimen/button_padding_right_left"
            android:paddingRight="@dimen/button_padding_right_left"
            android:background = "@drawable/roundedbutton"/>

        <Button
            android:id="@+id/button_add_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_popup"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/button_margin_top"
            android:paddingTop="@dimen/button_padding_top_bottom"
            android:paddingBottom="@dimen/button_padding_top_bottom"
            android:paddingLeft="@dimen/button_padding_right_left"
            android:paddingRight="@dimen/button_padding_right_left"
            android:background = "@drawable/roundedbutton"/>

    </LinearLayout>


</LinearLayout>