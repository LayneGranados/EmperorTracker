<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_sleep_record_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/carview_item_list_sleep_record"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview_sleep_records"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left|center_vertical">

                <TextView
                    android:id="@+id/textView_day_fisical_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="@dimen/textview_margin_top"
                    android:text="01"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/numbers_cardview_sleep_records" />

                <TextView
                    android:id="@+id/textView_month_fisical_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="JUN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/numbers_cardview_sleep_records"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/view_fisical_activity_date_divider"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:background="@color/colorDividerSecond"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView_type_item_fisical_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Run"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/numbers_cardview_sleep_records"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageview_type_item_fisical_activity"
                    android:layout_width="@dimen/imageview_icon_fisical_activities_width_heigth"
                    android:layout_height="@dimen/imageview_icon_fisical_activities_width_heigth"
                    android:src="@drawable/ic_running_black"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="Time"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/numbers_cardview_sleep_records"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_value_time_fisical_activities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="1:30mins"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/description_cardview_sleep_records" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Calories"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/numbers_cardview_sleep_records"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_calories_burned_fisical_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="265"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/description_cardview_sleep_records" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>